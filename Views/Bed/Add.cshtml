@model Tracker.Models.Bed

@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> UserManager

<h1>Add Garden Bed</h1>

<body style="background-color: #D1CA08 ">
    <form asp-controller="Bed" asp-action="AddBed" method="post" style="background-color: beige; border: 1px solid; border-radius: 5px">
        <div class="form-group">
            <br />
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" style="color:red"></span>
        </div>

        <div class="form-group">
            @*<label asp-for="UserId"></label>*@
            <input type="hidden" asp-for="UserId" class="form-control" value="@UserManager.GetUserId(User)" />
            <span></span>
        </div>

        <br />

        <input type="submit" value="Add Garden Bed" class="btn btn-light" style="border: 1px solid" />
<br />
    </form>
</body>