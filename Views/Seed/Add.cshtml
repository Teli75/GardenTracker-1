@model Tracker.Models.Seed
@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> UserManager

<h1>Add Seed</h1>
<body style="background-color: #D1CA08 ">
    <form asp-controller="Seed" asp-action="AddSeed" method="post" style="background-color: beige; border: 1px solid; border-radius: 5px">
        <div class="form-group">
            <label asp-for="Name"> Name</label>
            <input asp-for="Name" class="form-control" />
            <span></span>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DatePlanted"> Date Watered</label>
            <input asp-for="DatePlanted" class="form-control" />
            <span></span>
            <span asp-validation-for="DatePlanted" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HardinessZone"> Hardiness Zone</label>
            <input asp-for="HardinessZone" class="form-control" />
            <span></span>
            <span asp-validation-for="HardinessZone" style="color:red"></span>
        </div>

        <br />
        @*<div class="form-group">
            <label asp-for="ZipCode">Zipcode</label>
            <input asp-for="ZipCode" class="form-control" />
            <span></span>
        </div>*@

        <div class="form-group">
            @*<label asp-for="UserId"></label>*@
            <input type="hidden" asp-for="UserId" class="form-control" value="@UserManager.GetUserId(User)" />
            <span></span>
        </div>
        <br />

        <div class="form-group">
            <label asp-for="WaterSchedule"> Watering Schedule</label>
            <select asp-for="WaterSchedule">
                <option value="0">Please Select One</option>
                <option value="7">Once a week</option>
                <option value="3.5">Twice a week</option>
                <option value="14">Every other week</option>
                <option value="4">DEMO</option>
            </select>
            <span></span>
        </div>
        <br />
        <br />
        <input type="submit" value="Add Seed" class="btn btn-light" style="border: 1px solid" />
        <br />
        <br />
    @* <button type="submit" formaction="@Url.Action("GetZone", "ZoneAPI")" class="btn btn-danger">Get Hardiness zone from api</button>*@
    </form>
    <br />
    
</body>

