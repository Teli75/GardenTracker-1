@using Tracker.Models
@model List<Seed>

<h2>Edit Seeds</h2>
<body style="background-color: #D1CA08 ">
    @if (Model.Count == 0)
    {
        <p>No seeds selected for editing</p>
    }
    else
    {
        <form asp-controller="Seed" asp-action="EditSeedSubmit" method="post" style="background-color:beige; border: 1px solid">
            @foreach (var seed in Model)
            {
                <div>
                    <h1>Bed: @seed.Name</h1>
                    <label>Name:</label>
                    <input type="text" name="seeds[]" value="@seed.Name" />
                    <br />
                    <label>Hardiness Zone:</label>
                    <input type="text" name="hardinessZone[]" value="@seed.HardinessZone" />
                    <br />
                    <label>Date watered:</label>
                    <input type="text" name="datePlanted[]" value="@seed.DatePlanted" />
                    <br />
                    <label>Days between Watering</label>
                    <input type="text" name="datePlanted[]" value="@seed.WaterSchedule" />
                    <br />
                    <input type="hidden" name="seedIds[]" value="@seed.Id" />
                    <br />
                </div>
            }
            <br />
            <button type="submit" formaction="@Url.Action("EditSeedSubmit", "Seed")" class="btn btn-light" style="border:1px solid">Save Changes</button>

        </form>
    }
    </body>