@using Tracker.Models
@model List<Seed>
    <body style="background-color: #D1CA08 ">
        <form asp-controller="Seed" asp-action="Delete" method="post">
            <div class="text-center">
                <h1>Seeds Inventory </h1>

                @if (Model.Count == 0)
                {
                    <p>No seeds have been created yet!</p>
                }
                else
                {
                    <table class="table" style="background-color: beige; border: 1px; border-radius: 25px">
                        <tr>
                            <th>Id</th>
                            <th>Seed</th>
                            <th>Edit</th>
                            <th>Delete</th>

                        </tr>
                        @foreach (var seed in Model)
                        {
                            <tr>
                                <td>@seed.Id</td>

                                <td>
                                    <a asp-controller="Seed" asp-action="Detail" asp-route-id="@seed.Id">@seed.Name</a>
                                </td>

                                <td>
                                    <input type="checkbox" name="editIds" value="@seed.Id" />
                                </td>

                                <td>
                                    <input type="checkbox" name="deleteIds" value="@seed.Id" />
                                </td>
                            </tr>
                        }

                    </table>
                }
                <p><a asp-controller="Seed" asp-action="Add" class="btn btn-light"style="background-color: beige">Add Seed</a></p>

                <button type="submit" formaction="@Url.Action("DeleteSeed", "Seed")" class="btn btn-light" style="background-color: beige">Delete Selected Seeds</button>
                <button type="submit" formaction="@Url.Action("GatherSeeds", "Seed")" class="btn btn-light" style="background-color: beige">Edit Selected Seeds</button>



        </form>

    </body>